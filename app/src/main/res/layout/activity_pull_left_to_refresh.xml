                    android:background="@color/yellow"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="横着走啊" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@color/yellow"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="横着走啊" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@color/yellow"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="横着走啊" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@color/yellow"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="横着走啊" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@color/yellow"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="横着走啊" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="match_parent"
                    android:layout_marginRight="10dp"
                    android:background="@color/yellow"
                    android:gravity="center"
                    android:padding="10dp"
                    android:text="横着走啊" />

                <TextView
                    android:layout_width="wrap_content"
